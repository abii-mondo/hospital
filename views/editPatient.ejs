<!DOCTYPE html>
<html>
	<head>
			<%- include ('./partials/head') %>
	</head>

	<div class="container-fluid">

		<header>
			<%- include ('./partials/header') %>
		</header>

		<h2>Edit Patient Record</h2>

		<body>
			<form action='/edit' method="POST">
			  <div class="mb-3">
			    <label for="name" class="form-label">Name</label>
			    <input type="text" class="form-control" id="name" name="name" value="<%= eachPatient.name %> ">
			  </div>

			  <div class="mb-3">
			    <label for="email" class="form-label">Email</label>
			    <input type="email" class="form-control" id="email" name="email" value="<%= eachPatient.email %> ">
			  </div>

			  <div class="mb-3">
			    <label for="age" class="form-label">Age in years</label>
			    <input type="number" class="form-control" id="age" name="age" value="<%= eachPatient.age %> ">
			  </div>

			  <div class="mb-3">
			    <label for="password1" class="form-label">Password</label>
			    <input type="password" class="form-control" id="password1" name="password" value="<%= eachPatient.password %> ">
			  </div>

			  <button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</body>

		<footer>
		</footer>
		
	</div>
</html>